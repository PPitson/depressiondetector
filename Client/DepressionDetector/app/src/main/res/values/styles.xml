<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="preferenceTheme">@style/PreferencesTheme</item>
    </style>

    <style name="PreferencesTheme" parent="PreferenceThemeOverlay">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MoodActivityTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMinor">95%</item>
        <item name="android:windowMinWidthMajor">65%</item>
    </style>

    <style name="ColorButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
</resources>
